<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://messages.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/bitmap_gray1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_SovereignID"
            android:paddingRight="10dp" />

        <ImageView
            android:id="@+id/configurationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:layout_weight="1"
            android:src="@drawable/icon_action_configuration_small"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/agentTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:text="SovereignID Agent "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/cloudname"
            android:textSize="24dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerPadding="5px">

        <ImageButton
            android:id="@+id/schemasButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            android:src="@drawable/icon_action_profile"
            android:textColor="#ffffff"
            android:theme="@style/ImageButtonGraphTheme" />

        <ImageButton
            android:id="@+id/verifiersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            android:src="@drawable/icon_action_verifiers"
            android:textColor="#ffffff"
            android:theme="@style/ImageButtonGraphTheme" />

        <ImageButton
            android:id="@+id/requestsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:src="@drawable/icon_action_qrcode"
            android:textColor="#ffffff"
            android:theme="@style/ImageButtonGraphTheme" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cloudImageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_launcher"
        android:paddingRight="10dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_rowSpan="2"
        android:layout_gravity="center_horizontal"
        android:minWidth="80dp"
        android:minHeight="80dp"
        style="?android:attr/progressBarStyleLarge"
        android:indeterminate="false" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/schemasLayout"
            style="@style/ConnectionsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

</LinearLayout>
