<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://messages.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/bitmap_gray1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_SovereignID" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/didTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:text="@string/did"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/cloudname"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/seedTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:nestedScrollingEnabled="true"
            android:singleLine="true"
            android:text="Seed:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/seedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:nestedScrollingEnabled="true"
            android:singleLine="false"
            android:text="info1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/info1TextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:nestedScrollingEnabled="true"
            android:singleLine="true"
            android:text="Cloud Agent URL:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="22dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/info1TextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:nestedScrollingEnabled="true"
            android:singleLine="false"
            android:text="info1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="16dp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/info2TextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:nestedScrollingEnabled="true"
            android:singleLine="true"
            android:text="Edge Agent CID:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/info2TextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:nestedScrollingEnabled="true"
            android:singleLine="false"
            android:text="info2"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/gray"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/info1TextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:ellipsize="marquee"
            android:nestedScrollingEnabled="true"
            android:singleLine="true"
            android:text="Cloud Agency:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/agencyImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:src="@drawable/logo_ntb" />
    </LinearLayout>

    <ImageView
        android:id="@+id/sovrinImageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo_sovrin" />

</LinearLayout>
