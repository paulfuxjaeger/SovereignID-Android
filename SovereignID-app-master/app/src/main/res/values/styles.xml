<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bitmap_gray1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Splash screen. -->

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/layer_splash</item>
    </style>

    <!-- Other. -->

    <style name="ConnectionsLayout">
        <item name="android:divider">@drawable/divider_connection_drawable</item>
        <item name="android:showDividers">middle|end</item>
    </style>

    <style name="ConnectionFragment">
        <item name="android:background">@color/connection_4</item>
    </style>

    <style name="ProfileLayout">
        <item name="android:divider">@drawable/divider_profile_drawable</item>
        <item name="android:showDividers">middle|end</item>
    </style>

    <style name="ProfileEntityFragment">
    </style>

    <style name="ProfileAttributeFragment">
    </style>

    <style name="ChatLayout">
        <item name="android:divider">@drawable/divider_chat_drawable</item>
        <item name="android:showDividers">middle|end</item>
    </style>

    <style name="ChatFragment">
        <item name="android:background">@color/chat_3</item>
    </style>




    <style name="Widget.Button.ToggleRaiffeisen" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_bg_raiffeisen</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButtonRaiffeisen"  parent="android:Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.ToggleRaiffeisen</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>



    <style name="Widget.Button.ToggleUniqa" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_bg_uniqa</item>
